<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:layout_constraintCircleRadius="@dimen/cardview_default_elevation"
    app:cardBackgroundColor="@color/purple_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1"
            android:textColor="@color/purple"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/num"
            android:singleLine="true"
            android:text="玫瑰花的葬礼"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_name"
            android:layout_alignLeft="@+id/song_name"
            android:layout_marginTop="20dp"
            android:text="许嵩"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:id="@+id/line"
            android:background="#888"
            android:layout_toRightOf="@+id/singer"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/singer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/album"
            android:text="专辑名称"
            android:layout_below="@+id/song_name"
            android:layout_toRightOf="@+id/line"
            android:layout_alignTop="@+id/singer"
            android:textSize="14sp"
            android:textColor="@color/gr"
            android:ellipsize="end"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:layout_below="@+id/singer"
            android:layout_alignParentRight="true"
            android:text="05:32"
            android:textColor="@color/cheng"
            android:textSize="14sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
